<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Country</th>
      <th>City</th>
      <th>Details</th>
      <th>Company</th>
      <th>Likes</th>
      <th>Visits</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody scope="row">
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.country %></td>
        <td><%= job.city %></td>
        <td><%= job.details %></td>
        <td><%= job.company %></td>
        <td><%= job.likes %></td>
        <td><%= job.visits %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

